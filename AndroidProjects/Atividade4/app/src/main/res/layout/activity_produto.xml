<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdutoActivity">

    <ListView
        android:id="@+id/listaProduto"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btnAdicionarProduto"
            android:layout_margin="8dp"
            android:text="Cadastrar produto"
            android:onClick="cadastrarProduto"/>

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/btnAdicionarUsuario"
            android:layout_margin="8dp"
            android:text="Cadastrar usuário"
            android:onClick="cadastrarUsuario"/>

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btnVender"
            android:layout_margin="8dp"
            android:text="Vender"
            android:onClick="realizarVenda"/>

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/btnChamarPolicia"
            android:layout_margin="8dp"
            android:text="Chamar polícia"
            android:onClick="chamarPolicia"/>

    </RelativeLayout>

</RelativeLayout>